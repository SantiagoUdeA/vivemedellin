enum ReportReason {
    SPAM
    OFFENSIVE
    INAPPROPRIATE
    PERSONAL_INFORMATION
    ADVERTISING
}

type Report {
    id: ID!
    review: Review!
    reason: ReportReason!
    createdAt: String!
}

input CreateReportInput {
    reviewId: Int!
    reason: ReportReason!
}

extend type Mutation {
    createReport(input: CreateReportInput!): Report!
    deleteReport(reportId: ID!): Report!
}

extend type Query {
    allReports: [Report!]!
}
